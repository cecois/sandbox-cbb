{{#each rows}}
<li class="bit">
	{{#equal _source.bit 'Location'}}<i data-id="{{_source.location_type}}:{{_source.location_id}}" style="font-size:1.3em;" class="fa fa-map-marker"/>{{/equal}}
<span class="bit-instance">{{_source.instance}}</span>
<div class="columns">
	<div style="" class='column bit-data'>(<span class='tooltip is-tooltip-left' data-tooltip="{{_source.elucidation}}"><a href="#" class="cbb-trigger" data-type="bit" data-target="{{_source.bit}}">{{_source.bit}}</a></span> | ep.<a class="cbb-trigger" data-type="episode" data-target="{{_source.episode}}" href="#">{{#episodizer _source.episode}}{{/episodizer}}</a> | ~{{_source.tstart}})</div>
</div>
</li>
{{/each}}
